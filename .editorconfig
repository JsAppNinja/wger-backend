# EditorConfig: http://EditorConfig.org
#
# This is the top-most .editorconfig file; do not search in parent directories.
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab

[*.js]
indent_style = space
indent_size = 2

[.eslintignore]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2
